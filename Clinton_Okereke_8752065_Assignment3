class Shirts:
    def __init__ (self,shirttype,shirtcolour):
        self.shirttype=shirttype
        self.shirtcolour=shirtcolour

class Trousers:
    def __init__(self,trousertype, trousercolour):
        self.trousertype=trousertype
        self.trousercolour=trousercolour



